<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.js.class1.DoorActivity"
    android:gravity="center"
    android:background="#DDDDDD"
    tools:showIn="@layout/activity_door">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/door_on"
        android:id="@+id/door_front"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="前门"
        android:layout_toRightOf="@id/door_front"
        />
    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/door_off"
        android:id="@+id/door_back"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="后门"
        android:layout_toLeftOf="@id/door_back"
        android:layout_alignBottom="@id/door_back"
        />

    <ImageView
        android:id="@+id/window_front1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@id/door_front"
        android:layout_toLeftOf="@id/door_front"
        android:src="@drawable/window_on"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左前窗"
        android:layout_below="@+id/window_front1"
        android:layout_alignRight="@+id/window_front1"
        android:layout_alignEnd="@+id/window_front1" />
    <ImageView
        android:id="@+id/window_front2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@id/door_front"
        android:layout_toRightOf="@id/door_front"
        android:src="@drawable/window_on"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="右前窗"
        android:layout_below="@+id/window_front2"
        android:layout_alignLeft="@+id/window_front2" />

    <ImageView
        android:id="@+id/window_back1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@id/door_back"
        android:layout_toLeftOf="@id/door_back"
        android:src="@drawable/window_off"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左后窗"
        android:layout_above="@+id/window_back1"
        android:layout_alignRight="@+id/window_back1"
        android:layout_alignEnd="@+id/window_back1" />

    <ImageView
        android:id="@+id/window_back2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@id/door_back"
        android:layout_toRightOf="@id/door_back"
        android:src="@drawable/window_off"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="右后窗"
        android:layout_above="@+id/window_back2"
        android:layout_alignLeft="@+id/window_back2" />




</RelativeLayout>
